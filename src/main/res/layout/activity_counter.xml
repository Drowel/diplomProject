<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    tools:context=".CounterActivity">


    <Button
        android:id="@+id/buttonF1P2"
        android:layout_width="80dp"
        android:layout_height="108dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"

        android:background="@color/figterBlue"
        android:text="+2"
        android:textStyle="bold"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonF1P1" />

    <Button
        android:id="@+id/buttonF2P1"
        android:layout_width="80dp"
        android:layout_height="108dp"
        android:layout_marginTop="32dp"

        android:layout_marginEnd="24dp"
        android:background="@color/figterRed"
        android:text="+1"
        android:textStyle="bold"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreF2" />

    <Button
        android:id="@+id/buttonF2P2"
        android:layout_width="80dp"
        android:layout_height="108dp"
        android:layout_marginTop="12dp"

        android:layout_marginEnd="24dp"
        android:background="@color/figterRed"
        android:text="+2"
        android:textStyle="bold"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonF2P1" />

    <Button
        android:id="@+id/buttonF2P3"
        android:layout_width="80dp"
        android:layout_height="108dp"
        android:layout_marginTop="12dp"

        android:layout_marginEnd="24dp"
        android:background="@color/figterRed"
        android:text="+3"
        android:textStyle="bold"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonF2P2" />

    <Button
        android:id="@+id/buttonF1P3"
        android:layout_width="80dp"
        android:layout_height="108dp"
        android:layout_marginStart="24dp"

        android:layout_marginTop="12dp"
        android:background="@color/figterBlue"
        android:text="+3"
        android:textStyle="bold"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonF1P2" />

    <Button
        android:id="@+id/buttonF1P1"
        android:layout_width="80dp"
        android:layout_height="108dp"
        android:layout_marginStart="24dp"

        android:layout_marginTop="32dp"
        android:background="@color/figterBlue"
        android:text="+1"
        android:textStyle="bold"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreF1" />

    <Button
        android:id="@+id/buttonStartStop"
        android:layout_width="127dp"
        android:layout_height="343dp"
        android:layout_marginStart="144dp"

        android:layout_marginTop="30dp"
        android:background="@color/yellowButton"
        android:text="FiGHT"
        android:textStyle="bold"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerText" />

    <TextView
        android:id="@+id/textFighterName_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:text="Fighter One"
        android:textColor="@color/yellowFont"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textFighterName_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:textSize="20dp"
        android:text="Fighter Two"
        android:textColor="@color/yellowFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreF1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:text="0"
        android:textColor="@color/figterBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFighterName_1" />

    <TextView
        android:id="@+id/scoreF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="55dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="0"
        android:textColor="@color/figterRed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFighterName_2" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="134dp"
        android:layout_height="56dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="100dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="00:00"
        android:textColor="@color/yellowFont"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>